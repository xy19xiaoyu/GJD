<%= form_for(@info_customer, :html => {:class => 'form-horizontal'}) do |f| %>
  <% if @info_customer.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@info_customer.errors.count, "error") %> prohibited this info_customer from being saved:</h2>

      <ul>
        <% @info_customer.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <fieldset>

    <div class="widget row-fluid">
      <div class="navbar">
        <div class="navbar-inner">
          <h6>客户资料表单</h6>
        </div>
      </div>
      <div class="well">

        <div class="control-group">
          <%= f.label :name, '客户名称：', :class => 'control-label' %>
          <div class="controls"><%= f.text_field :name, :class => 'span12' %></div>
        </div>
        <div class="control-group">
          <%= f.label :shortName, '名称缩写：', :class => 'control-label' %>
          <div class="controls"><%= f.text_field :shortName, :class => 'span12', :placeholder => '如不填写则使用客户名称' %></div>
        </div>
        <div class="control-group">
          <%= f.label :contact, '联系人：', :class => 'control-label' %>
          <div class="controls"><%= f.text_field :contact, :class => 'span12' %></div>
        </div>
        <div class="control-group">
          <%= f.label :mobile_tel, '移动电话：', :class => 'control-label' %>
          <div class="controls"><%= f.text_field :mobile_tel, :class => 'span12' %></div>
        </div>
        <div class="control-group">
          <%= f.label :tel, '固定电话：', :class => 'control-label' %>
          <div class="controls"><%= f.text_field :tel, :class => 'span12', :placeholder => '包含区号' %></div>
        </div>
        <div class="control-group">
          <%= f.label :fax, '传真：', :class => 'control-label' %>
          <div class="controls"><%= f.text_field :fax, :class => 'span12', :placeholder => '包含区号' %></div>
        </div>
        <div class="control-group">
          <%= f.label :email, '电子邮箱：', :class => 'control-label' %>
          <div class="controls"><%= f.text_field :email, :class => 'span12' %></div>
        </div>
        <div class="control-group">
          <%= f.label :address, '地址：', :class => 'control-label' %>
          <div class="controls"><%= f.text_field :address, :class => 'span12' %></div>
        </div>
        <div class="control-group">
          <%= f.label :zip, '邮编：', :class => 'control-label' %>
          <div class="controls"><%= f.text_field :zip, :class => 'span12' %></div>
        </div>
        <div class="control-group">
          <%= f.label :bank, '开户行：', :class => 'control-label' %>
          <div class="controls"><%= f.text_field :bank, :class => 'span12' %></div>
        </div>
        <div class="control-group">
          <%= f.label :bankAccountNum, '开户行账号：', :class => 'control-label' %>
          <div class="controls"><%= f.text_field :bankAccountNum, :class => 'span12' %></div>
        </div>
        <div class="control-group">
          <%= f.label :bankAccountName, '开户名称：', :class => 'control-label' %>
          <div class="controls"><%= f.text_field :bankAccountName, :class => 'span12' %></div>
        </div>
        <div class="control-group">
          <%= f.label :deposit, '保证金：', :class => 'control-label' %>
          <div class="controls"><%= f.text_field :deposit, :class => 'span12' %></div>
        </div>
        <div class="control-group">
          <%= f.label :alarmMoney, '预警金额：', :class => 'control-label' %>
          <div class="controls"><%= f.text_field :alarmMoney, :class => 'span12' %></div>
        </div>
        <div class="control-group">
          <%= f.label :rebateFlag, '是否打折：', :class => 'control-label' %>
          <div class="controls">
            <label class="checkbox inline"><%= f.check_box :rebateFlag, :class => 'styled' %></label></div>
        </div>
        <div class="control-group">
          <%= f.label :payType, '付款类型：', :class => 'control-label' %>
          <div class="controls"><%= f.text_field :payType, :class => 'span12' %></div>
        </div>
        <div class="control-group">
          <%= f.label :upper_id, '上游客户：', :class => 'control-label' %>
          <div class="controls"><%= f.text_field :upper_id, :class => 'span12' %></div>
        </div>
      </div>
      <div class="form-actions align-right">
        <button type="submit" class="btn btn-primary">提交</button>
        <button type="button" class="btn btn-danger" onclick="history.back()">取消</button>
        <button type="reset" class="btn">重置</button>
      </div>
    </div>
  </fieldset>
<% end %>
